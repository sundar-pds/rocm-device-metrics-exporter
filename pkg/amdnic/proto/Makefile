.PHONY: bld_proto
TOGEN := $(shell ls *.proto)
bld_proto:
	@echo "building proto"
	@for c in ${TOGEN}; do \
		printf "\n +++++++++++++++++ Generating $${c} +++++++++++++++++ \n"; \
		protoc \
		--proto_path=. \
		-I/$(PWD)/vendor \
		--go-patch_out=plugin=go,paths=import:$(PWD)/pkg/amdnic \
		--go-patch_out=plugin=go-grpc,paths=import:$(PWD)/pkg/amdnic \
		$${c}; \
	done;

.PHONY: all
all: bld_proto